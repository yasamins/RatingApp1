<% layout('layout2') %>

<div id="wrapper">

    <% include ../partials/sidebar %>

    <div id="page-content-wrapper">
        <% include ../partials/navbar %>
        <div class="container-fluid main_body">
			<div class="ul_links">
	            <ul>
	                <li><a href="/">Home</a></li> |
	                <li><a href="/companies">Company</a></li> |
	                <li><a href="#">Company Profile</a></li>
	            </ul>
	        </div>

            <div class="bodyDiv">
				<h4 style="">Company Profile</h4>

	            <div class="row mainDiv">
					<div class="innerDiv">
						<div class="col-md-3" style="margin-bottom:30px;">
							<img src="http://placeholder.it/270x270" width="270px" height="270px" alt="">
							<h3><%= data.name %></h3>
							<i class="fa fa-map-marker "><%= data.city %>, <%= data.country %></i><br>
							<i class="fa fa-building-o "> <%= data.sector %></i><br>
							<i class="fa fa-external-link "><a href="http://<%= data.website %>" target="_blank">
								http://www.website.com </a>
							</i><br><br>

							<a href="/review/<%= data._id %>" class="btn btn-success">Rate this company</a><br><br>

							<a href="/<%= data.name %>/emloyees" class="btn btn-info">View Company Employees</a><br><br>

                            <% if(user.company.name != data.name) {%>
                                <a href="/company/register-employee/<%= id %>" class="btn btn-primary">
                                    Register me as an employee
                                </a><br><br>
                                <% } else { %>
                                  <h2>You are an employee</h2>
                                  <% }%>


							<h3>Average Rating</h3>
							<h5 class="star"></h5>
							<p>Based on (5) reviews</p>
						</div>

						<div class="col-md-9 colDiv">
							<div class="row">
								<div class="col-md-4">
									<div class="count">
										<h1>
											5
										</h1>
										<h2>Ratings</h2>
										<h3>Total ratings received</h3>
									</div>

								</div>

								<div class="col-md-4">
									<div class="count">
										<h1>
											25
										</h1>
										<h2>Total Stars</h2>
										<h3>Total stars received</h3>
									</div>
								</div>

								<div class="col-md-4">
									<div class="count">
										<h1>
											<span class="star"></span>
										</h1>
										<h2>Average Rating</h2>
										<h3>Based on 5 reviews</h3>
									</div>
								</div><br><br>

								<div class="col-md-12 header">
									<h2>Review (5)</h2>

									<div class="linkDiv">
										<a href="" class="btn btn-success">
											Write Review</a>
									</div>
								</div>

							</div>
						</div>
					</div>

	            </div>
            </div>
        </div>
    </div>

</div>
